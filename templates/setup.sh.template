#!/bin/bash

# Setup script for {{project_name}} UX Sprint
# This script sets up the Python environment for video analysis tools

echo "🚀 Setting up {{project_name}} UX Sprint environment..."

# Check if Python 3 is available
if ! command -v python3 &> /dev/null; then
    echo "❌ Python 3 is required but not installed. Please install Python 3.8 or higher."
    exit 1
fi

# Create virtual environment if it doesn't exist
if [ ! -d ".venv" ]; then
    echo "📦 Creating Python virtual environment..."
    python3 -m venv .venv
fi

# Activate virtual environment
echo "🔧 Activating virtual environment..."
source .venv/bin/activate

# Install Python dependencies
echo "📥 Installing Python dependencies..."
pip install --upgrade pip > /dev/null 2>&1
pip install -r requirements.txt

# Create assets directory structure
echo "📁 Creating assets directory structure..."
mkdir -p assets/video/{{product_name}}/frames
mkdir -p assets/screenshots
mkdir -p prototypes
mkdir -p research

echo "✅ Setup complete!"
echo ""
echo "📋 Usage:"
echo "  • To extract frames from videos: source .venv/bin/activate && python extract_frames.py"
echo "  • Video files should be placed in: assets/video/{{product_name}}/"
echo "  • Frames will be extracted to: assets/video/{{product_name}}/frames/"
echo ""
echo "🎯 This environment is now ready for UX research with screen recording analysis."
echo ""
echo "📚 Next steps:"
echo "  1. Place video files in assets/video/{{product_name}}/"
echo "  2. Edit extract_frames.py to point to your video file"
echo "  3. Run: source .venv/bin/activate && python extract_frames.py"
echo "  4. Use extracted frames for wireframe creation and analysis"